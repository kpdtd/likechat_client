<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- activity 透明设置 -->
    <style name="activity_transparent_style" parent="AppTheme">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item> -->
    </style>

    <!--设置imageview的scaleType为centerCrop-->
    <style name="center_crop">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:background">@drawable/shape_gradient_title_bg</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_18_dp</item>
    </style>

    <!-- 主界面radio button 样式 -->
    <style name="main_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_main_tab_selector</item>
        <item name="android:textSize">@dimen/txt_size_12_dp</item>
    </style>

    <!-- 第一个界面上方的radio 样式 -->
    <style name="tab_main_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:drawableBottom">@drawable/radio_main_filter_selector</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- 发现界面上方的radio 样式 -->
    <style name="tab_find_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:background">@drawable/radio_find_title_tab_selector</item>
        <item name="android:textColor">@color/text_find_tab_selector</item>
    </style>

    <!-- 我的 界面item 样式 -->
    <style name="me_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:textColor">@color/text_black_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/me_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableRight">@mipmap/ic_right_arrow</item>
    </style>

    <!-- 账户余额item 样式 -->
    <style name="account_balance_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:textColor">@color/text_check_black_selector</item>
        <item name="android:background">@drawable/account_balance_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 来电 挂断和接听 样式 -->
    <style name="call_in_phone_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 拨打电话 资费 样式 -->
    <style name="call_out_notice_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#706d6d</item>
        <item name="android:textSize">@dimen/txt_size_11_dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 编辑用户信息item 样式 -->
    <style name="edit_user_info_item_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/me_item_selector</item>
        <item name="android:layout_marginBottom">1px</item>
    </style>

    <!-- 编辑用户信息item 样式 -->
    <style name="edit_user_info_item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/half_more_black</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
    </style>

    <!-- 编辑用户信息item 样式 -->
    <style name="edit_user_info_item_edit_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:drawableRight">@mipmap/ic_right_arrow</item>
    </style>

    <!-- 编辑用户信息 更换头像的菜单 样式 -->
    <style name="edit_user_info_change_avatar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/me_item_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 登录 按钮 样式 -->
    <style name="login_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/text_white_selector</item>
    </style>

    <!-- 设置界面item 样式 -->
    <style name="settings_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">@color/half_more_black</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:drawableRight">@mipmap/ic_right_arrow</item>
        <item name="android:background">@drawable/me_item_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 我的好友 radio button 样式 -->
    <style name="user_friend_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_user_friend_tab_selector</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Vip 特权 Textview 样式 -->
    <style name="vip_interest_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/half_more_black</item>
        <item name="android:textSize">@dimen/txt_size_12_dp</item>
    </style>

    <!-- Vip 充值 layout 样式 -->
    <style name="vip_charge_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">#fefefe</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Vip 充值 价格文字 样式 -->
    <style name="vip_charge_text1_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:textColor">@color/half_more_black</item>
    </style>

    <!-- Vip 充值 赠送文字 样式 -->
    <style name="vip_charge_text2_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_12_dp</item>
        <item name="android:textColor">@color/half_more_black</item>
    </style>

    <!-- 会员中心 各种价格后面的checkbox 样式 -->
    <style name="vip_charge_price_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/chk_vip_price_selector</item>
    </style>

    <!-- 支付radio按钮 样式 -->
    <style name="pay_radio_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#fefefe</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/radio_pay_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/text_black_selector</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
    </style>

    <!-- 用户主页下方按钮 样式 -->
    <style name="user_info_buttom_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white_selector</item>
        <item name="android:textSize">@dimen/txt_size_12_dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!-- 用户主页上方介绍信息的 样式 -->
    <style name="user_info_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
    </style>

    <!-- 用户主页上方介绍信息的 样式 -->
    <style name="user_info_pic_thumb_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:src">@mipmap/avatar2</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- 用户主页上方其他主播头像 样式 -->
    <style name="user_info_anchor_avatar_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- 用户主页上方其他主播名称 样式 -->
    <style name="user_info_anchor_name_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_12_dp</item>
    </style>

    <!-- 主播动态中图片 样式 -->
    <style name="anchor_zone_pic_thumb_style">
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">1.5dp</item>
    </style>
</resources>
