<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:background">@drawable/shape_gradient_title_bg</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_20_dp</item>
    </style>

    <!-- 主界面radio button 样式 -->
    <style name="main_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_main_tab_selector</item>
        <item name="android:textSize">@dimen/txt_size_16_dp</item>
    </style>

    <!-- 第一个界面上方的radio 样式 -->
    <style name="tab_main_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:drawableBottom">@drawable/radio_main_filter_selector</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- 发现界面上方的radio 样式 -->
    <style name="tab_find_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_size_14_dp</item>
        <item name="android:background">@drawable/radio_find_title_tab_selector</item>
        <item name="android:textColor">@color/text_find_tab_selector</item>
    </style>

    <!-- 我的 界面item 样式 -->
    <style name="me_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/txt_size_16_dp</item>
        <item name="android:textColor">@color/text_black_selector</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/me_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableRight">@mipmap/ic_right_arrow</item>
    </style>

    <!-- 账户余额item 样式 -->
    <style name="account_balance_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/txt_size_16_dp</item>
        <item name="android:textColor">@color/text_black_selector</item>
        <item name="android:background">@drawable/account_balance_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@null</item>
    </style>

</resources>
