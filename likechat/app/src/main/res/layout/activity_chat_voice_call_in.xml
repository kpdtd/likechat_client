<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/call_in_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_call_in"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_30_dp"/>

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="我是老司机"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_24_dp"/>

    <TextView
        android:id="@+id/txt_call_state_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_call_in_state_call"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_20_dp"/>

    <TextView
        android:id="@+id/txt_call_state_on_the_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_call_in_state_on_the_phone"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_16_dp"/>

    <TextView
        android:id="@+id/txt_call_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="09:43"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_20_dp"/>

    <RelativeLayout
        android:id="@+id/lay_call_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/txt_hang_up"
            style="@style/call_in_phone_button_style"
            android:drawableTop="@drawable/btn_hang_up_selector_items"
            android:text="@string/txt_call_in_hang_up"/>

        <TextView
            android:id="@+id/txt_answer"
            style="@style/call_in_phone_button_style"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/btn_answer_selector_items"
            android:text="@string/txt_call_in_answer"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_on_the_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <CheckBox
            android:id="@+id/chk_mute"
            style="@style/call_in_phone_button_style"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_mute_selector_items"
            android:button="@null"/>

        <CheckBox
            android:id="@+id/chk_speakers"
            style="@style/call_in_phone_button_style"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_speaker_selector_items"
            android:button="@null"/>

        <CheckBox
            android:id="@+id/txt_hang_up2"
            style="@style/call_in_phone_button_style"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_hang_up_selector_items"/>
    </RelativeLayout>

</LinearLayout>
