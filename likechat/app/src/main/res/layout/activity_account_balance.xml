<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/shape_gradient_title_bg">

        <TextView
            style="@style/title_text_style"
            android:text="@string/title_account_balance"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:scaleType="center"
            android:clickable="true"
            android:src="@drawable/btn_back_selector"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/vip_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.5"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_30_dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/txt_account_balance_unit"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_14_dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <CheckBox
            android:id="@+id/chk_10"
            style="@style/account_balance_item_style"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/chk_58"
            style="@style/account_balance_item_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:id="@+id/chk_98"
            style="@style/account_balance_item_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <CheckBox
            android:id="@+id/chk_598"
            style="@style/account_balance_item_style"/>

        <CheckBox
            android:id="@+id/chk_1598"
            style="@style/account_balance_item_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:id="@+id/chk_input"
            style="@style/account_balance_item_style"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RadioButton
            android:id="@+id/rdo_alipay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@mipmap/ic_alipay"
            android:drawableRight="@drawable/radio_pay_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/txt_pay_alipay"
            android:textColor="@color/text_black_selector"
            android:textSize="@dimen/txt_size_16_dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>

        <RadioButton
            android:id="@+id/rdo_weixin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableLeft="@mipmap/ic_weixin"
            android:drawableRight="@drawable/radio_pay_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/txt_pay_weixin"
            android:textColor="@color/text_black_selector"
            android:textSize="@dimen/txt_size_16_dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
    </RadioGroup>

</LinearLayout>
