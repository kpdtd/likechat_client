<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <LinearLayout
        style="@style/title_style"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rgp_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdo_all"
                style="@style/tab_main_radio_style"
                android:checked="true"
                android:text="@string/rdo_main_all"/>

            <RadioButton
                android:id="@+id/rdo_charm"
                style="@style/tab_main_radio_style"
                android:text="@string/rdo_main_charm"/>

            <RadioButton
                android:id="@+id/rdo_sexy"
                style="@style/tab_main_radio_style"
                android:text="@string/rdo_main_sexy"/>

            <RadioButton
                android:id="@+id/rdo_hot"
                style="@style/tab_main_radio_style"
                android:text="@string/rdo_main_hot"/>

            <RadioButton
                android:id="@+id/rdo_gentle"
                style="@style/tab_main_radio_style"
                android:text="@string/rdo_main_gentle"/>
        </RadioGroup>

    </LinearLayout>

    <com.audio.miliao.widget.GridViewWithHeaderAndFooter
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:numColumns="2"
        android:paddingTop="5dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp">

    </com.audio.miliao.widget.GridViewWithHeaderAndFooter>

</LinearLayout>
