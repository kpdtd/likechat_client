<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">

        <TextView
            style="@style/title_text_style"
            android:text="@string/title_login"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/btn_back_selector"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_qq_login"
                style="@style/login_button_style"
                android:background="@drawable/shape_round_corner_qq_login"
                android:drawableLeft="@mipmap/ic_login_qq"
                android:text="@string/txt_login_qq"/>

            <TextView
                android:id="@+id/txt_weixin_login"
                style="@style/login_button_style"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/ic_login_weixin"
                android:background="@drawable/shape_round_corner_weixin_login"
                android:text="@string/txt_login_weixin"/>

            <Button
                android:id="@+id/btn_yunxin_login"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="YunXin Login"/>

            <Button
                android:id="@+id/btn_audio"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Audio"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
