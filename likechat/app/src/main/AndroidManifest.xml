<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.audio.miliao" >

    <!-- 使用网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 使用相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name="com.audio.miliao.theApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.audio.miliao.activity.SplashActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.audio.miliao.activity.AccountBalanceActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.ChatTextActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity android:name="com.audio.miliao.activity.ChatVoiceCallInActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.ChatVoiceCallOutActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.CustomerServiceActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:theme="@style/activity_transparent_style"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.EditUserInfoActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.HelpActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.ImageBrowseActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.InputActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
        <activity android:name="com.audio.miliao.activity.LoginActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.MainActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.SettingsActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.UpdateActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:theme="@style/activity_transparent_style"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.UserFriendActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.UserInfoActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.UserZoneActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.audio.miliao.activity.VipActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>